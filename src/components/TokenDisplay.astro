<!-- Placeholder when no token data is available -->
<div id="tokenPlaceholder" class="min-h-[300px] flex flex-col items-center justify-center p-6 bg-gray-50 rounded-lg border border-gray-200 text-center">
  <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-gray-300 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
  </svg>
  <h3 class="text-lg font-semibold text-gray-500 mb-2">No Token Data</h3>
  <p class="text-gray-400 text-sm">Paste your WZPDCL SMS in the input field to extract token information</p>
</div>

<!-- Display extracted token data -->
<div id="tokenDataDisplay" class="hidden min-h-[300px]">
  <h2 class="text-xl font-bold mb-4 text-indigo-600">Token Information</h2>

  <div class="bg-gray-50 p-4 rounded-lg border border-gray-200">
    <div class="mb-4">
      <h3 class="text-sm font-semibold text-gray-500 mb-2">WZPDCL Prepaid Token:</h3>
      <pre id="prepaidToken" class="bg-white p-4 rounded border border-gray-200 text-base font-mono overflow-x-auto"></pre>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      <div>
        <h3 class="text-sm font-semibold text-gray-500 mb-2">Sequence Number:</h3>
        <p id="sequenceNumber" class="bg-white p-3 rounded border border-gray-200 text-sm"></p>
      </div>

      <div>
        <h3 class="text-sm font-semibold text-gray-500 mb-2">Meter Number:</h3>
        <p id="meterNumber" class="bg-white p-3 rounded border border-gray-200 text-sm"></p>
      </div>

      <div id="vendingAmountContainer" class="hidden">
        <h3 class="text-sm font-semibold text-gray-500 mb-2">Vending Amount:</h3>
        <p id="vendingAmount" class="bg-white p-3 rounded border border-gray-200 text-sm"></p>
      </div>

      <div id="energyCostContainer" class="hidden">
        <h3 class="text-sm font-semibold text-gray-500 mb-2">Energy Cost:</h3>
        <p id="energyCost" class="bg-white p-3 rounded border border-gray-200 text-sm"></p>
      </div>

      <div id="totalChargeContainer" class="hidden">
        <h3 class="text-sm font-semibold text-gray-500 mb-2">Total Charge:</h3>
        <p id="totalCharge" class="bg-white p-3 rounded border border-gray-200 text-sm"></p>
      </div>

      <div id="meterRentContainer" class="hidden">
        <h3 class="text-sm font-semibold text-gray-500 mb-2">Meter Rent:</h3>
        <p id="meterRent" class="bg-white p-3 rounded border border-gray-200 text-sm"></p>
      </div>

      <div id="demandChargeContainer" class="hidden">
        <h3 class="text-sm font-semibold text-gray-500 mb-2">Demand Charge:</h3>
        <p id="demandCharge" class="bg-white p-3 rounded border border-gray-200 text-sm"></p>
      </div>

      <div id="vatContainer" class="hidden">
        <h3 class="text-sm font-semibold text-gray-500 mb-2">VAT:</h3>
        <p id="vat" class="bg-white p-3 rounded border border-gray-200 text-sm"></p>
      </div>

      <div id="rebateContainer" class="hidden">
        <h3 class="text-sm font-semibold text-gray-500 mb-2">Rebate:</h3>
        <p id="rebate" class="bg-white p-3 rounded border border-gray-200 text-sm"></p>
      </div>
    </div>
  </div>
</div>
